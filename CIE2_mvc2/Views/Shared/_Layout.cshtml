<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CIE2_mvc2</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-light p-3" style="width: 250px; min-height: 100vh;">
            <h3 class="fw-bold">ScanX</h3>
            <button class="btn btn-dark w-100 mb-3" onclick="window.location.href='@Url.Action("Upload", "Home")'">+ Upload PDF</button>
            <button class="btn btn-secondary w-100 mb-3">🚀 Workshop</button>
            <button class="btn btn-outline-dark w-100">Upgrade</button>
            <div class="mt-4">
                <small>4 out of 5 PDFs Uploaded</small>
                <div class="progress mt-1" style="height: 6px;">
                    <div class="progress-bar bg-dark" style="width: 80%;"></div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-grow-1 p-4">
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false) <!-- Moved this inside <body> -->
</body>
</html>
